{
  "name": "uss-claude",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @uss-claude/shared build",
    "build:server": "pnpm --filter @uss-claude/bridge-server build",
    "build:cli": "pnpm --filter @uss-claude/hook-cli build",
    "build:spoty": "pnpm --filter @uss-claude/spoty-daemon build",
    "build:ui": "pnpm --filter @uss-claude/bridge-ui build",
    "dev": "pnpm --filter @uss-claude/bridge-server dev",
    "dev:ui": "pnpm --filter @uss-claude/bridge-ui dev",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "ws": "^8.19.0"
  }
}
